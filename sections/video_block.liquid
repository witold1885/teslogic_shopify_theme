{%- style -%}
	.video_block {
		width: 1110px;
		height: 617px;
		margin: 0 auto 120px;
		background: url({{ 'video_background.png' | asset_url }});
		border-radius: 11.0448px;
		overflow: hidden;
		padding-left: 60px;
	}
	.video_block-title {
		margin-top: 176px;
		width: 524px;
		height: 192px;
		font-family: 'SF Pro';
		font-style: normal;
		font-weight: 700;
		font-size: 52px;
		line-height: 64px;
		letter-spacing: 0.02em;
		color: #FFFFFF;
	}
	.video_block-button {
		margin-top: 32px;
		width: 253px;
		height: 56px;
		background: #FFFFFF;
		border-radius: 100px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 3px 23px;
		cursor: pointer;
	}
	.video_block-button img {
		width: 26px;
		height: 26px;
	}
	.video_block-button span {
		font-family: 'Gotham';
		font-style: normal;
		font-weight: 400;
		font-size: 24px;
		line-height: 32px;
		color: #0F0F0F;
	}
{%- endstyle -%}
<style type="text/css">
	@media screen and (min-width: 1000px) and (max-width: 1366px) {
		.video_block {
			width: calc(1110 * 100vw / 1366);
			height: calc(617 * 100vw / 1366);
			margin: 0 auto calc(120 * 100vw / 1366);
			border-radius: calc(11.0448 * 100vw / 1366);
			padding-left: calc(60 * 100vw / 1366);
		}
		.video_block-title {
			margin-top: calc(176 * 100vw / 1366);
			width: calc(524 * 100vw / 1366);
			height: calc(192 * 100vw / 1366);
			font-size: calc(52 * 100vw / 1366);
			line-height: calc(64 * 100vw / 1366);
		}
		.video_block-button {
			margin-top: calc(32 * 100vw / 1366);
			width: calc(253 * 100vw / 1366);
			height: calc(56 * 100vw / 1366);
			border-radius: calc(100 * 100vw / 1366);
			padding: calc(3 * 100vw / 1366) calc(23 * 100vw / 1366);
		}
		.video_block-button img {
			width: calc(26 * 100vw / 1366);
			height: calc(26 * 100vw / 1366);
		}
		.video_block-button span {
			font-size: calc(24 * 100vw / 1366);
			line-height: calc(32 * 100vw / 1366);
		}
	}	
</style>

<div class="video_block">
	<div class="video_block-title">Convenient dashboard behind the steering wheel</div>
	<button class="video_block-button">
		<img src="{{ 'play.png' | asset_url }}">
		<span>Watch review </span>
	</button>
</div>