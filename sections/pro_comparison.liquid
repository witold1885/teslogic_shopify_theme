{% style %}
	.comparison-wrap {
		width: 100%;
		padding-top: 180px;
		padding-bottom: 180px;
		height: 1694px; 
		background: url({{ 'pro_comparison_bg.png' | asset_url }});
		background-size: cover;
  		background-position: center;
		box-sizing: border-box;
	}
	.comparison {
		width: 1296px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		grid-row-gap: 40px;
	}
	.comparison-top {
		display: flex;
		flex-direction: column;
		grid-row-gap: 16px;
	}
	.comparison-title {
		color: #000;
		font-family: Manrope;
		font-size: 52px;
		font-style: normal;
		font-weight: 600;
		line-height: 64px;
	}
	.comparison-subtitle {
		color: #666;
		font-family: Manrope;
		font-size: 24px;
		font-style: normal;
		font-weight: 500;
		line-height: 32px;
	}
	.comparison-table {
		width: 100%;
		height: 886px;
		background: linear-gradient(0deg, rgba(255, 255, 255, 0.32) 0%, rgba(255, 255, 255, 0.32) 100%), rgba(223, 223, 223, 0.50);
		background-blend-mode: screen, normal;
		backdrop-filter: blur(6px);
	}
	
{% endstyle %}
{% capture comparison %}
[
  {"feature": "Mobile App Teslogic Dash + Magnet Phone Holder", "v2": 1, "boost": 1, "performance": 1}
]
{% endcapture %}
{{ comparison | json }}
<div class="comparison-wrap">
	<div class="comparison">
		<div class="comparison-top">
			<div class="comparison-title">Comparison of Teslogic Features and Specs</div>
			<div class="comparison-subtitle">Each delivering increased horsepower and access to exclusive features</div>			
		</div>
		<div class="comparison-table">
			<table>
				<thead>
					<tr>
						<th>Features</th>
						<th>v2</th>
						<th>Pro Boost</th>
						<th>Pro Performance</th>
					</tr>
				</thead>
			</table>
		</div>
		<div class="comparison-check"></div>		
	</div>
</div>
