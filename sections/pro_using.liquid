{% style %}
	.using__wrap {
		width: 100%;
		padding-top: 176px;
		padding-bottom: 180px;
		height: 774px;
		background: #101010;
		box-sizing: border-box;
	}
	.using {
		width: 1296px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		grid-row-gap: 34px;
	}
	.using__top {
		display: flex;
		flex-direction: column;
		grid-row-gap: 8px;
	}
	.using__title {
		color: #FFF;
		font-family: Manrope;
		font-size: 52px;
		font-style: normal;
		font-weight: 500;
		line-height: 64px;
	}
	.using__subtitle {
		color: #A2A2A2;
		font-family: Manrope;
		font-size: 24px;
		font-style: normal;
		font-weight: 400;
		line-height: 32px;
		display: flex;
		align-items: center;
		grid-column-gap: 8px;
	}
	.using__subtitle a {
		color: #0465FD;
		font-weight: 500;
		display: flex;
		align-items: center;
		grid-column-gap: 4px;
		cursor: pointer;
	}
	.using__content {
		width: 100%;
		display: flex;
		flex-direction: row;
		align-items: flex-start;
		justify-content: center;
		grid-column-gap: 24px;
	}
	.using__row {
		margin: 0;
		width: 306px;
		display: flex;
		flex-direction: column;
		grid-row-gap: 12px;
	}
	.using__row-block {
		width: 100%;
		height: 220px;
		border-radius: 24px;
		background: #171717;
		position: relative;
	}
	.using__row-legend-number {
		width: 32px;
		height: 32px;
		background: #212121;
		border-radius: 100%;
		color: #0465FD;
		text-align: center;
		font-family: Manrope;
		font-size: 20px;
		font-style: normal;
		font-weight: 700;
		line-height: 20px;
		position: absolute;
		top: 20px;
		left: 20px;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.using__row-legend-text {
		color: #A2A2A2;
		font-family: Manrope;
		font-size: 18px;
		font-style: normal;
		font-weight: 400;
		line-height: 24px;
	}
	.using__row-image {
		position: absolute;
	}
	.using__row-image img {
		width: 100%;
	}
	.using__row-image-1 {
		width: 225.5px;
		height: 127px;
		top: 54px;
		left: 59px;
	}
	.using__row-image-2 {
		width: 150.998px;
		height: 201px;
		top: 20px;
		left: 108.75px;
	}
	.using__row-image-3 {
		width: 221px;
		height: 107px;
		top: 63px;
		left: 43px;
	}
	.using__row-image-4 {
		width: 128px;
		height: 100px;
		top: 67px;
		left: 88px;
	}
	@media screen and (min-width: 576px) and (max-width: 1440px) {
		.using__wrap {
			padding-top: calc(176 * 100vw / 1440);
			padding-bottom: calc(180 * 100vw / 1440);
			height: calc(774 * 100vw / 1440);
		}
		.using {
			width: calc(1296 * 100vw / 1440);
			grid-row-gap: calc(34 * 100vw / 1440);
		}
		.using__top {
			grid-row-gap: calc(8 * 100vw / 1440);
		}
		.using__title {
			font-size: calc(52 * 100vw / 1440);
			line-height: calc(64 * 100vw / 1440);
		}
		.using__subtitle {
			font-size: calc(24 * 100vw / 1440);
			line-height: calc(32 * 100vw / 1440);
			grid-column-gap: calc(8 * 100vw / 1440);
		}
		.using__subtitle a {
			grid-column-gap: calc(4 * 100vw / 1440);
		}
		.using__content {
			grid-column-gap: calc(24 * 100vw / 1440);
		}
		.using__row {
			width: calc(306 * 100vw / 1440);
			grid-row-gap: calc(12 * 100vw / 1440);
		}
		.using__row-block {
			height: calc(220 * 100vw / 1440);
			border-radius: calc(24 * 100vw / 1440);
		}
		.using__row-legend-number {
			width: calc(32 * 100vw / 1440);
