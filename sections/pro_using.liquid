			left: calc(43 * 100vw / 1440);
		}
		.using__row-image-4 {
			width: calc(128 * 100vw / 1440);
			height: calc(100 * 100vw / 1440);
			top: calc(67 * 100vw / 1440);
			left: calc(88 * 100vw / 1440);
		}
	}
	@media screen and (max-width: 575px) {
		.using__wrap {
			padding-top: calc(96 * 100vw / 375);
			padding-bottom: calc(96 * 100vw / 375);
			height: calc(1654 * 100vw / 375);
		}
		.using {
			width: calc(335 * 100vw / 375);
			flex-direction: column;
			grid-row-gap: calc(38 * 100vw / 375);
		}
		.using__title {
			font-size: calc(32 * 100vw / 375);
			line-height: calc(40 * 100vw / 375);
		}
		.using__subtitle {
			font-size: calc(18 * 100vw / 375);
			line-height: calc(24 * 100vw / 375);
			flex-direction: column;
			grid-row-gap: calc(8 * 100vw / 375);
		}
		.using__subtitle a {
			grid-column-gap: calc(4 * 100vw / 375);
		}
		.using__content {
			flex-direction: column;
			grid-row-gap: calc(40 * 100vw / 375);
		}
		.using__row {
			width: 100%;
			align-items: center;
			grid-row-gap: calc(12 * 100vw / 375);
		}
		.using__row-block {
			height: calc(240 * 100vw / 375);
			border-radius: calc(24 * 100vw / 375);
		}
		.using__row-legend-number {
			width:  calc(32 * 100vw / 375);
			height: calc(32 * 100vw / 375);
			font-size:  calc(20 * 100vw / 375);
