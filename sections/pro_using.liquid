		}
		.using__row-legend-text {
			font-size: calc(18 * 100vw / 1440);
			line-height: calc(24 * 100vw / 1440);
		}
		.using__row-image-1 {
			width: calc(225.5 * 100vw / 1440);
			height: calc(127 * 100vw / 1440);
			top: calc(54 * 100vw / 1440);
			left: calc(59 * 100vw / 1440);
		}
		.using__row-image-2 {
			width: calc(150.998 * 100vw / 1440);
			height: calc(201 * 100vw / 1440);
