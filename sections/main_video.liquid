<style type="text/css">
	.main_video {
		/*position: absolute;*/
		width: calc(100% - 128px - 128px);
		margin-bottom: 96px;
		margin-left: 128px;
		margin-right: 128px;
		border-radius: 20px;
		overflow: hidden;
	}
	.main_video iframe {
		width: 100%;
		height: 100%;
	}
	@media screen and (min-width: 1000px) and (max-width: 1366px) {  
		.main_video {
			width: calc(100% - 128 * 100vw / 1366 - 128 * 100vw / 1366);
			margin-bottom: calc(96 * 100vw / 1366);
			margin-left: calc(128 * 100vw / 1366);
			margin-right: calc(128 * 100vw / 1366);
			border-radius: calc(20 * 100vw / 1366);
		}
	}
	@media screen and (max-width: 999px) {  
		.main_video {
			width: 100%;
			margin-left: 0;
			margin-right: 0;
			margin-bottom: 80px;
		}
	}
</style>

<div class="main_video">
	<iframe width="1848" height="1040" src="https://www.youtube.com/embed/sKRoj-O902M" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		setVideoHeight()
		window.addEventListener('resize', setVideoHeight)
		function setVideoHeight() {
			let w = $('.main_video').width()
			let h = w * 1040 / 1848
			$('.main_video').height(h)
		}
	})
</script>