<link rel="stylesheet" href="{{ 'shortcuts.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'shortcuts-responsive.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="shortcuts">
	<div class="shortcuts-title">
		<div class="shortcuts-title-icon">
			<img src="{{ 'code.svg' | asset_url }}">
		</div>
		<div class="shortcuts-title-text">Teslogic Shortcuts</div>		
	</div>
	<div class="shortcuts-content">
		<div class="shortcuts-content-list">
		    {% assign articles = blogs['teslogic-shortcuts'].articles | sort: "title" %}
		    {% for article in articles %}
				<div class="shortcuts-content-list-item">
					<div class="shortcuts-content-list-item-title">
						<div class="shortcuts-content-list-item-title-icon">
							<img src="{{ 'shortcuts_marker.svg' | asset_url }}">
						</div>
		  				{% assign title_array = article.title | split: " " %}
		  				{% assign number = title_array.first %}
		  				{% assign title = article.title | replace: number, "" %}
						<div class="shortcuts-content-list-item-title-text">{{ title }}</div>
					</div>
					<div class="shortcuts-content-list-item-content">{{ article.content }}</div>
				</div>
		  	{% endfor %}			
		</div>
		<div class="shortcuts-content-image">
			<img src="{{ 'shortcuts.png' | asset_url }}" srcset="{{ 'shortcuts-retina.png' | asset_url }} 2x" loading="lazy">
		</div>
	</div>
</div>