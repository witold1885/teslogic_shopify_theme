<link rel="stylesheet" href="{{ 'screens.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'screens-responsive.css' | asset_url }}" media="print" onload="this.media='all'">

{% style %}
	.screens.light {
		background: #F6F6F6;
	}
	.screens__bg.light {
		background-image: url({{ 'screens-bg-light.png' | asset_url}}), lightgray 50% / cover no-repeat;
	}
	.screens.dark {
		background: #090909;
	}
	.screens__bg.dark {
		background-image: url({{ 'screens-bg-dark.png' | asset_url}}), lightgray 50% / cover no-repeat;
	}
{% endstyle %}

<div class="screens" id="screens">
	<div class="screens__bg">
		<div class="screens__wrap">
			<div class="screens__top">
				<div class="screens__top-title">
					<div class="screens__top-title-primary">Switch between five screens</div>
					<div class="screens__top-title-secondary">and explore your car with Teslogic</div>
				</div>
				<div class="screens__top-switcher">
					<div class="screens__top-switcher-item active" data-mode="light">Light</div>
					<div class="screens__top-switcher-item" data-mode="dark">Dark</div>				
				</div>
			</div>
			<div class="screens__features"></div>
			<div class="screens__select">
				<div class="screens__select-item active">
					<img class="screens__select-item-marker light active" src="{{ 'marker-light-active.svg' | asset_url }}">
					<img class="screens__select-item-marker light" src="{{ 'marker-light.svg' | asset_url }}">
					<img class="screens__select-item-marker dark active" src="{{ 'marker-dark-active.svg' | asset_url }}">
					<img class="screens__select-item-marker dark" src="{{ 'marker-dark.svg' | asset_url }}">
					<div class="screens__select-item-title">Dashboard</div>
					<div class="screens__select-item-text">Easily control the speed, power and battery of your Tesla</div>				
				</div>
				<div class="screens__select-item">
					<img class="screens__select-item-marker light active" src="{{ 'marker-light-active.svg' | asset_url }}">
					<img class="screens__select-item-marker light" src="{{ 'marker-light.svg' | asset_url }}">
					<img class="screens__select-item-marker dark active" src="{{ 'marker-dark-active.svg' | asset_url }}">
					<img class="screens__select-item-marker dark" src="{{ 'marker-dark.svg' | asset_url }}">
					<div class="screens__select-item-title">Perfomance</div>
					<div class="screens__select-item-text">Experience the performance mode data even if you are driving</div>				
				</div>
				<div class="screens__select-item">
					<img class="screens__select-item-marker light active" src="{{ 'marker-light-active.svg' | asset_url }}">
					<img class="screens__select-item-marker light" src="{{ 'marker-light.svg' | asset_url }}">
					<img class="screens__select-item-marker dark active" src="{{ 'marker-dark-active.svg' | asset_url }}">
					<img class="screens__select-item-marker dark" src="{{ 'marker-dark.svg' | asset_url }}">
					<div class="screens__select-item-title">Energy screen</div>
					<div class="screens__select-item-text">Detailed pictures of how different vehicle systems consume power</div>				
				</div>
				<div class="screens__select-item">
					<img class="screens__select-item-marker light active" src="{{ 'marker-light-active.svg' | asset_url }}">
					<img class="screens__select-item-marker light" src="{{ 'marker-light.svg' | asset_url }}">
					<img class="screens__select-item-marker dark active" src="{{ 'marker-dark-active.svg' | asset_url }}">
					<img class="screens__select-item-marker dark" src="{{ 'marker-dark.svg' | asset_url }}">
					<div class="screens__select-item-title">Car Data</div>
					<div class="screens__select-item-text">Get and share all needed info about your Tesla</div>				
				</div>
				<div class="screens__select-item">
					<img class="screens__select-item-marker light active" src="{{ 'marker-light-active.svg' | asset_url }}">
					<img class="screens__select-item-marker light" src="{{ 'marker-light.svg' | asset_url }}">
					<img class="screens__select-item-marker dark active" src="{{ 'marker-dark-active.svg' | asset_url }}">
					<img class="screens__select-item-marker dark" src="{{ 'marker-dark.svg' | asset_url }}">
					<div class="screens__select-item-title">Map and Nav</div>
					<div class="screens__select-item-text">Plan your route and conveniently follow it along the way.</div>				
				</div>
				
			</div>
		</div>
	</div>	
</div>

<script type="text/javascript">
	$(document).ready(function() {
		var mode = 'light' // dark

		setMode()
		setActiveSelectItem()

		$('.screens__top-switcher-item').on('click', function() {
			mode = $(this).data('mode')
			setMode()
			setActiveSelectItem()
		})

		$('.screens__select-item').on('click', function() {
			$('.screens__select-item').each(function() {
				$(this).removeClass('active')
			})
			$(this).addClass('active')
			setActiveSelectItem()
		})

		function setMode() {
			$('.screens').removeClass('light')
			$('.screens').removeClass('dark')
			$('.screens').addClass(mode)
			$('.screens__bg').removeClass('light')
			$('.screens__bg').removeClass('dark')
			$('.screens__bg').addClass(mode)
		}

		function setActiveSelectItem() {
			$('.screens__select-item').each(function() {
				$(this).find(`.screens__select-item-title`).removeClass('light')
				$(this).find(`.screens__select-item-text`).removeClass('light')

				$(this).find(`.screens__select-item-title`).removeClass('dark')
				$(this).find(`.screens__select-item-text`).removeClass('dark')

				$(this).find(`.screens__select-item-title`).removeClass('active')
				$(this).find(`.screens__select-item-text`).removeClass('active')

				$(this).find(`.screens__select-item-title`).addClass(mode)
				$(this).find(`.screens__select-item-text`).addClass(mode)

				$(this).find(`.screens__select-item-marker`).hide()
				if ($(this).hasClass('active')) {
					$(this).find(`.screens__select-item-marker.${mode}.active`).show()
					$(this).find(`.screens__select-item-title`).addClass('active')
					$(this).find(`.screens__select-item-text`).addClass('active')
				}
				else {
					$(this).find(`.screens__select-item-marker.${mode}:not(.active)`).show()
					$(this).find(`.screens__select-item-title`).removeClass('active')
					$(this).find(`.screens__select-item-text`).removeClass('active')
				}
			})
		}
	})
</script>
