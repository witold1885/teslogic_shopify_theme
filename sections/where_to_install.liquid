<link rel="stylesheet" href="{{ 'where_to_install.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAqbo5rx2oVhWCW_pSzNrWnywQSRSdlnQ4"></script>

{% assign articles = blogs['where-to-install'].articles | sort: "id" %}

<div class="where">
	<div class="where__title">Where to install</div>
	<div class="where__body">
	    {% for article in articles %}
	    	{% assign blog_content = article.content | append: "<p></p>" %}
			{% assign blog_lines = article.content | split: "</p>" %}
			<div class="where__item">
				<div class="where__item-left">
					<div class="where__item-title">{{ article.title }}</div>
					<div class="where__item-data">
					  {% for line in blog_lines %}
					    {% assign line = line | remove:"<p>" | strip %}
					    {% if line != "" %}
					      {% assign parts = line | split:":" %}
					      <div class="where__item-data-item">
					      	<div class="where__item-data-item-key">{{ parts[0] | remove: "<p>" | strip }}:</div>
					      	<div class="where__item-data-item-value">{{ parts[1] | remove: "<p>" | strip }}</div>
					      </div>
					    {% endif %}
					  {% endfor %}
					</div>					
				</div>
				<div class="where__item-right">
					<div class="where__item-image">
						<img draggable="false" src="{{ article.image | img_url: '392x392' }}">
					</div>
					<script>
					    function initMap() {
					      var coordinates = { lat: 50.4501, lng: 30.5234 };
					      var map = new google.maps.Map(document.getElementById('map-{{ forloop.index }}'), {
					        center: coordinates,
					        zoom: 14,
					        disableDefaultUI: true
					      });
					      new google.maps.Marker({
					        position: coordinates,
					        map: map
					      });
					    }
					</script>
					<div class="where__item-map" id="map-{{ forloop.index }}" style="height: 450px; width: 600px;">
						<!-- <iframe
						  width="392"
						  height="288"
						  style="border:0"
						  loading="lazy"
						  allowfullscreen
						  src="https://www.google.com/maps/embed/v1/view?key=AIzaSyAqbo5rx2oVhWCW_pSzNrWnywQSRSdlnQ4&center=50.4501,30.5234&zoom=14&maptype=roadmap">
						</iframe> -->
					</div>
				</div>				
			</div>
	  	{% endfor %}
	</div>
</div>
