		.store_block-product-amount-button {
			width: calc(56 * 100vw / 1366px);
			height: calc(56 * 100vw / 1366px);
			box-shadow: 0px calc(4 * 100vw / 1366px) calc(16 * 100vw / 1366px) rgba(0, 0, 0, 0.1);
			border: 1px solid #FFFFFF;
			border-radius: calc(100 * 100vw / 1366px);
		}
		.store_block-product-amount-button-minus > div,
		.store_block-product-amount-button-plus > div {
			width: calc(20px * 100vw / 1366px); 
			height: calc(4px * 100vw / 1366px); 
			background: #0F0F0F; 
			position: absolute; 
			left: calc(18px * 100vw / 1366px); 
			top: calc(26px * 100vw / 1366px);
