				<input type="hidden" id="charger-variant-id" value="{{ charger.variants[0].id }}">
			</div>		
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function () {
		$('.order-product-data-preorder-button').on('click', function () {
			let num = $(this).data('num')
			let product_id = $(`#product-${num}-variant-id`).val()
			let items = [{ id: Number(product_id), quantity: 1 }]
			if ($(`#select-charger-${num}`).prop('checked') === true) {
				let charger_variant_id = $('#charger-variant-id').val()
				items.push({ id: Number(charger_variant_id), quantity: 1 })
			}
			let formData = { items }
			fetch(window.Shopify.routes.root + 'cart/add.js', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify(formData)
			}).then(response => {
			  	window.location.href = '/cart'
			}).catch((error) => {
			  	console.error('Error:', error)
			})
		})
	})
</script>
