{% style %}
	.order-container {
		width: 100%;
/*		padding-top: 180px;*/
/*		padding-bottom: 180px;*/
		height: 1249px; 
		background: #020202;
		box-sizing: border-box;
	}
	.order-wrap {
/*		height: 1048px;*/
		height: 100%;
		padding-top: 180px;
		background: url({{ 'pro_order_bg_new.png' | asset_url }});
		background-size: cover;
  		background-position: center;
  		box-sizing: border-box;
	}
	.order {
  		display: flex;
  		flex-direction: column;
  		grid-row-gap: 64px;
  		width: 1079px;
  		margin: 0 auto;
	}
	.order-top {
		display: flex;
		flex-direction: column;
		grid-row-gap: 12px;
	}
	.order-title {
		color: #FFF;
		font-family: Manrope;
		font-size: 52px;
		font-style: normal;
		font-weight: 600;
		line-height: 64px;
	}
	.order-subtitle {
		color: #9A9A9A;
		font-family: Manrope;
		font-size: 24px;
		font-style: normal;
		font-weight: 500;
		line-height: 32px;
	}
	.order-body {
		display: flex;
		flex-direction: column;
		grid-row-gap: 24px;
	}
	.order-products {
		display: flex;
		grid-column-gap: 24px;
	}
	.order-product {
		width: 526px;
		height: 596px;
		border-radius: 40px;
/*		background: linear-gradient(0deg, #383838 0%, #383838 100%), rgba(0, 0, 0, 0.60);*/
		background-size: cover;
		background-position: center;
		background-blend-mode: color-dodge, normal;
		backdrop-filter: blur(6px);
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	.order-product-1 {
/*		background: url({{ 'pro_order_product_1_bg.png' | asset_url }}), linear-gradient(0deg, #383838 0%, #383838 100%), rgba(0, 0, 0, 0.60);*/
		background: url({{ 'pro_order_product_1_bg.png' | asset_url }});
	}
	.order-product-2 {
/*		background: url({{ 'pro_order_product_2_bg.png' | asset_url }}), linear-gradient(0deg, #383838 0%, #383838 100%), rgba(0, 0, 0, 0.60);*/
		background: url({{ 'pro_order_product_2_bg.png' | asset_url }});
	}
	.order-product-image {
		width: 100%;
	}
	.order-product-image img {
		width: 100%;
	}
	.order-product-data {
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		grid-row-gap: 16px;
		padding: 0 32px 32px;
	}
	.order-product-data-info {
		display: flex;
		flex-direction: column;
		grid-row-gap: 3px;
	}
	.order-product-data-info-price {
		display: flex;
		align-items: center;
		grid-column-gap: 8px;	
		font-family: Manrope;
		font-style: normal;
	}
	.order-product-data-info-price-main {
		color: #1657FC;
		font-size: 24px;
		font-weight: 700;
		line-height: 32px;
	}
	.order-product-data-info-price-old {
		color: #666;
		font-size: 18px;
		font-weight: 600;
		line-height: 24px;
		text-decoration: line-through;
	}
	.order-product-data-info-title {
		color: #FFF;
		font-family: Manrope;
		font-size: 32px;
		font-style: normal;
		font-weight: 600;
		line-height: 40px;
/*		width: 384px;*/
	}
	.order-product-data-preorder {
		display: flex;
		justify-content: flex-start;
		align-items: center;
		grid-column-gap: 12px;
	}
	.order-product-data-preorder-button {
		display: flex;
		width: 180px;
		padding: 20px 0;
		justify-content: center;
		align-items: center;
		border-radius: 54px;
		background: linear-gradient(174deg, #024DEE 4.57%, #1902A6 251.92%), linear-gradient(0deg, rgba(255, 255, 255, 0.33) -728.8%, rgba(255, 255, 255, 0.00) 181.94%), rgba(255, 255, 255, 0.04);
		backdrop-filter: blur(8px);
		border: none;
		outline: none;
		box-shadow: none;
		color: #FFF;
		text-align: center;
		font-family: Manrope;
		font-size: 18px;
		font-style: normal;
		font-weight: 500;
		line-height: 24px;
		cursor: pointer;
	}
	.order-product-data-preorder-button:hover {
		background: linear-gradient(174deg, #0245D4 4.57%, #15028D 251.92%); 
	}
	.order-product-data-preorder-features {
		flex-direction: column;
		grid-row-gap: 8px;
	}
	.order-product-data-preorder-features-desktop {
		display: flex;
	}
	.order-product-data-preorder-features-mobile {
		display: none;
	}
	.order-product-data-preorder-features-item {
		display: flex;
		align-items: center;
		grid-column-gap: 8px;
	}
	.order-product-data-preorder-features-item-icon {
		width: 20px;
		height: 20px;
	}
	.order-product-data-preorder-features-item-text {
		color: #666;
		font-feature-settings: 'clig' off, 'liga' off;
		font-family: Manrope;
		font-size: 14px;
		font-style: normal;
		font-weight: 400;
		line-height: 20px;
	}
	.order-product-data-preorder-features-item-text span {
		color: #1657FC;
		font-weight: 500;
	}
	.order-product-data-add {
		display: flex;
		align-items: center;
		grid-column-gap: 8px;
	}
	.order-product-data-add-checkbox {
		width: 20px;
		height: 20px;
		appearance: none;
		-webkit-appearance: none;
		background: url({{ 'pro_comparison_checkbox_inactive.svg' | asset_url }});
		background-size: cover;
		background-position: center;
		cursor: pointer;
	}
	.order-product-data-add-checkbox:checked {
		background: url({{ 'pro_comparison_checkbox_active.svg' | asset_url }});
		background-size: cover;
		background-position: center;
	}
	.order-product-data-add-title {
		color: #FFF;
		font-feature-settings: 'clig' off, 'liga' off;
		font-family: Manrope;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: 20px;
		cursor: pointer;
	}
	.order-product-data-add-price {
		color: #1657FC;
		font-feature-settings: 'clig' off, 'liga' off;
		font-family: Manrope;
		font-size: 16px;
		font-style: normal;
		font-weight: 500;
		line-height: 20px;
	}
	.order-product-data-delivery {
		display: flex;
		align-items: center;
		grid-column-gap: 8px;
		margin-top: 8px;
	}
	.order-product-data-delivery-icon {
		width: 20px;
		height: 20px;
	}
	.order-product-data-delivery-text {
		color: #FFF;
		font-feature-settings: 'clig' off, 'liga' off;
		font-family: Manrope;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: 20px;
	}
	.order-product-data-delivery-text span {
