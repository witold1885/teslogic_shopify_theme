{% style %}
	.order-container {
		width: 100%;
		padding-top: 180px;
		padding-bottom: 180px;
		height: 1408px; 
		background: #020202;
		box-sizing: border-box;
	}
	.order-wrap {
		height: 1048px;
		background: url({{ 'pro_order_bg.png' | asset_url }});
		background-size: cover;
  		background-position: center;
	}
	.order {
  		display: flex;
  		flex-direction: column;
  		grid-row-gap: 64px;
  		width: 1079px;
  		margin: 0 auto;
	}
	.order-top {
		display: flex;
		flex-direction: column;
		grid-row-gap: 12px;
	}
	.order-title {
		color: #FFF;
		font-family: Manrope;
		font-size: 52px;
		font-style: normal;
		font-weight: 600;
		line-height: 64px;
	}
	.order-subtitle {
		color: #9A9A9A;
		font-family: Manrope;
		font-size: 24px;
		font-style: normal;
		font-weight: 600;
		line-height: 32px;
	}
	.order-body {
		display: flex;
		flex-direction: column;
		grid-row-gap: 24px;
	}
	.order-products {
		display: flex;
		grid-column-gap: 24px;
	}
	.order-date {
		width: 100%;
		height: 136px;
		border-radius: 40px;
		background: linear-gradient(0deg, #383838 0%, #383838 100%), rgba(0, 0, 0, 0.60);
		background-blend-mode: color-dodge, normal;
		backdrop-filter: blur(6px); 
	}
	
{% endstyle %}

<div class="order-container">
	<div class="order-wrap">
		<div class="order">
			<div class="order-top">
				<div class="order-title">Ready to take your Tesla<br>to the next level?</div>
				<div class="order-subtitle">Order Teslogic Pro and start your journey towards<br>unmatched driving performance and satisfaction</div>			
			</div>
			<div class="order-body">
				<div class="order-products"></div>
				<div class="order-date">
					
				</div>
				
			</div>		
		</div>
	</div>
</div>
