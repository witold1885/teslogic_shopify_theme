{% style %}
	.order-container {
		width: 100%;
		padding-top: 180px;
		padding-bottom: 180px;
		height: 1408px; 
		background: #020202;
		box-sizing: border-box;
	}
	.order-wrap {
		height: 1048px;
		background: url({{ 'pro_order_bg.png' | asset_url }});
		background-size: cover;
  		background-position: center;
	}
	.order {
  		display: flex;
  		flex-direction: column;
  		grid-row-gap: 64px;
  		width: 1079px;
  		margin: 0 auto;
	}
	.order-top {
		display: flex;
		flex-direction: column;
		grid-row-gap: 12px;
	}
	.order-title {
		color: #FFF;
		font-family: Manrope;
		font-size: 52px;
		font-style: normal;
		font-weight: 600;
		line-height: 64px;
	}
	.order-subtitle {
		color: #9A9A9A;
		font-family: Manrope;
		font-size: 24px;
		font-style: normal;
		font-weight: 600;
		line-height: 32px;
	}
	.order-body {
		display: flex;
		flex-direction: column;
		grid-row-gap: 24px;
	}
	.order-products {
		display: flex;
		grid-column-gap: 24px;
	}
	.order-product {
		width: 526px;
		height: 600px;
		border-radius: 40px;
		background: linear-gradient(0deg, #383838 0%, #383838 100%), rgba(0, 0, 0, 0.60);
		background-blend-mode: color-dodge, normal;
		backdrop-filter: blur(6px);
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	.order-product-image {
		width: 100%;
	}
	.order-product-image img {
		width: 100%;
	}
	.order-product-data {
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		grid-row-gap: 16px;
		padding: 0 33px 41px;
	}
	.order-product-data-info {
		display: flex;
		flex-direction: column;
		grid-row-gap: 3px;
	}
	.order-product-data-info-price {
		display: flex;
		align-items: center;
		grid-column-gap: 8px;	
		font-family: Manrope;
		font-style: normal;
	}
	.order-product-data-info-price-main {
		color: #1657FC;
		font-size: 24px;
		font-weight: 700;
		line-height: 32px;
	}
	.order-product-data-info-price-old {
		color: #666;
		font-size: 18px;
		font-weight: 600;
		line-height: 24px;
		text-decoration: line-through;
	}
	.order-product-data-info-title {
		color: #FFF;
		font-family: Manrope;
		font-size: 32px;
		font-style: normal;
		font-weight: 600;
		line-height: 40px;
		width: 384px;
	}
	.order-product-data-add {
		display: flex;
		align-items: center;
		grid-column-gap: 8px;
	}
	.order-product-data-add-checkbox {
		width: 20px;
		height: 20px;
		appearance: none;
		-webkit-appearance: none;
/*		background-color: #404040;*/
	/*	filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25)); */
		background: url({{ 'pro_comparison_checkbox_inactive.svg' | asset_url }});
/*		display: inline-block;*/
/*		position: relative;*/
/*		padding: 6.67px 5px;*/
/*		border-radius: 4px;*/
/*		margin: 0;*/
		cursor: pointer;
	}
	.order-product-data-add-checkbox:checked {
		background: url({{ 'pro_comparison_checkbox_active.svg' | asset_url }});
	}
	/*.order-product-data-add-checkbox:checked:after {
		content: url({{ 'ok.svg' | asset_url }});
		position: absolute;
		width: 10px;
		height: 6.667px; 
		top: 3.33px;
		left: 5px;
		color: #000;
	}*/
	.order-product-data-add-title {
		color: #FFF;
		font-feature-settings: 'clig' off, 'liga' off;
		font-family: Manrope;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: 20px;
	}
	.order-product-data-add-price {
		color: #1657FC;
		font-feature-settings: 'clig' off, 'liga' off;
		font-family: Manrope;
		font-size: 16px;
		font-style: normal;
		font-weight: 500;
		line-height: 20px;
	}
	.order-date {
		width: 100%;
		height: 136px;
		border-radius: 40px;
		background: url({{ 'pro_order_date_bg.png' | asset_url }}), linear-gradient(0deg, #383838 0%, #383838 100%), rgba(0, 0, 0, 0.60);
		background-blend-mode: color-dodge, normal;
		backdrop-filter: blur(6px);
		padding: 48px;
		box-sizing: border-box;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.order-date-item {
		display: flex;
		align-items: center;
		grid-column-gap: 12px;
	}
	.order-date-item-icon {
		width: 40px;
		height: 40px;
	}
	.order-date-item-text {
		color: #FFF;
		font-family: Manrope;
		font-size: 32px;
		font-style: normal;
		font-weight: 500;
		line-height: 40px;
	}
	
{% endstyle %}

{% assign product1 = all_products['teslogic-pro-boost-transmitter-kit'] %}
{% assign product2 = all_products['teslogic-pro-performace-transmitter-kit'] %}
