{% style %}
	.order-container {
		width: 100%;
		padding-top: 180px;
		padding-bottom: 180px;
		height: 1408px; 
		background: #020202;
		box-sizing: border-box;
	}
	.order-wrap {
		height: 1048px;
		background: url({{ 'pro_order_bg.png' | asset_url }});
		background-size: cover;
  		background-position: center;
	}
	.order {
  		display: flex;
  		flex-direction: column;
  		grid-row-gap: 64px;
  		width: 1079px;
  		margin: 0 auto;
	}
	.order-top {
		display: flex;
		flex-direction: column;
		grid-row-gap: 12px;
	}
	.order-title {
		color: #FFF;
		font-family: Manrope;
		font-size: 52px;
		font-style: normal;
		font-weight: 600;
		line-height: 64px;
	}
	.order-subtitle {
		color: #9A9A9A;
		font-family: Manrope;
		font-size: 24px;
		font-style: normal;
		font-weight: 600;
		line-height: 32px;
	}
	.order-body {
		display: flex;
		flex-direction: column;
		grid-row-gap: 24px;
	}
	.order-products {
		display: flex;
		grid-column-gap: 24px;
	}
	.order-product {
		width: 526px;
		height: 600px;
		border-radius: 40px;
		background: linear-gradient(0deg, #383838 0%, #383838 100%), rgba(0, 0, 0, 0.60);
		background-blend-mode: color-dodge, normal;
		backdrop-filter: blur(6px);
	}
	.order-date {
		width: 100%;
		height: 136px;
		border-radius: 40px;
		background: linear-gradient(0deg, #383838 0%, #383838 100%), rgba(0, 0, 0, 0.60);
		background-blend-mode: color-dodge, normal;
		backdrop-filter: blur(6px);
		padding: 48px;
		box-sizing: border-box;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.order-date-item {
		display: flex;
		align-items: center;
		grid-column-gap: 12px;
	}
	.order-date-item-icon {
		width: 40px;
		height: 40px;
	}
	.order-date-item-text {
		color: #FFF;
		font-family: Manrope;
		font-size: 32px;
		font-style: normal;
		font-weight: 500;
		line-height: 40px;
	}
	
{% endstyle %}

{% assign product1 = all_products['teslogic-pro-boost-transmitter-kit'] %}
{% assign product2 = all_products['teslogic-pro-performace-transmitter-kit'] %}
{% assign charger = all_products['teslogic-wireless-charger'] %}

<div class="order-container">
	<div class="order-wrap">
		<div class="order">
			<div class="order-top">
				<div class="order-title">Ready to take your Tesla<br>to the next level?</div>
				<div class="order-subtitle">Order Teslogic Pro and start your journey towards<br>unmatched driving performance and satisfaction</div>
			</div>
			<div class="order-body">
				<div class="order-products">
					<div class="order-product">
						<div class="order-product-image">
							<img src="{{ product1.featured_image | img_url: '526x526' }}">
						</div>
						
					</div>
					<div class="order-product"></div>
					
				</div>
				<div class="order-date">
					<div class="order-date-item">
						<img class="order-date-item-icon" src="{{ 'pro_order_discount.svg' | asset_url }}">
						<div class="order-date-item-text">Pre order discount began</div>
					</div>
					<div class="order-date-item">
						<img class="order-date-item-icon" src="{{ 'pro_order_delivery.svg' | asset_url }}">
						<div class="order-date-item-text">Estimated delivery: June 2024</div>
					</div>
				</div>				
			</div>		
		</div>
	</div>
</div>
