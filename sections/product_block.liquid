<script type="text/javascript">
	$(document).ready(function() {

		var imgnum = 0
		setGalleryImage()
		
		var galleryWrap = document.querySelector('.store_block-product-gallery-mobile')

		var startX, startY, deltaX, deltaY, listing = false

		function handleMouseDown(event) {
			event.preventDefault()
			startX = event.touches ? event.touches[0].clientX : event.clientX
			startY = event.touches ? event.touches[0].clientY : event.clientY
			deltaX = 0
			deltaY = 0
			listing = true
		}

		function handleMouseMove(event) {
		  	// if (listing) {
		  		const clientX = event.touches ? event.touches[0].clientX : event.clientX
		  		const clientY = event.touches ? event.touches[0].clientY : event.clientY
			    deltaX = clientX - startX
			    deltaY = clientY - startY
			    startX = clientX
			    startY = clientY
			    if (Math.abs(deltaX / deltaY) < 1) {
			    	listing = false
	                const scrollTop = $('body').scrollTop()
	                $('body').scrollTop(scrollTop - deltaY)
				}
			// }
		}

		function handleMouseUp() {
		    if (deltaX != 0 && listing) {
				let direction = deltaX > 0 ? 'prev' : 'next'
				handleDirection(direction)
			}
			listing = false
		}

		galleryWrap.addEventListener('mousedown', handleMouseDown)
		galleryWrap.addEventListener('mousemove', handleMouseMove/*, { once: true }*/)
		galleryWrap.addEventListener('mouseup', handleMouseUp/*, { once: true }*/)

		galleryWrap.addEventListener('touchstart', handleMouseDown)
		galleryWrap.addEventListener('touchmove', handleMouseMove/*, { once: true }*/)
		galleryWrap.addEventListener('touchend', handleMouseUp/*, { once: true }*/)

