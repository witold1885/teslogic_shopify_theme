{% style %}
	#shopify-product-reviews {
		display: none;
	}
	.store_block {
		padding-top: 100px;
	}
	.store_block-product-title {
		max-width: 420px;
		margin-bottom: 12px;
	}
	@media screen and (min-width: 576px) and (max-width: 1440px) {
		.store_block {
			padding-top: calc(100 * 100vw / 1440);
		}
		.store_block-product-title {
			max-width: calc(420 * 100vw / 1440);
