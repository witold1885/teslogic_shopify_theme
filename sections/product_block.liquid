{% assign product = all_products[handle] %}

<div class="store_block">
	<div class="store_block-product" id="shop-now">
		<div class="store_block-product-gallery">
			<div class="store_block-product-gallery-items">
				{% assign thumb = "-thumb" %}
				{% assign counter = 0 %}  
				{% for image in product.images %}
                    {% assign parts = image | split: thumb %}
                    {% if parts.size > 1 %}
    					<div class="store_block-product-gallery-item {% if counter == 0 %}active{% endif %}" data-imgnum="{{ counter }}">
    						<img class="store_block-product-gallery-item-image" src="{{ image | img_url: '86x86' }}">
    					</div>
    					{% assign counter = counter | plus: 1 %}
					{% endif %}
				{% endfor %}
			</div>
			<div class="store_block-product-gallery-main">
				{% assign full = "-full" %}
				{% assign counter = 0 %}  
				{% for image in product.images %}
                    {% assign parts = image | split: full %}
                    {% if parts.size > 1 %}
						<img data-imgnum="{{ counter }}" src="{{ image | img_url: '1052x1052' }}">
    					{% assign counter = counter | plus: 1 %}
					{% endif %}
				{% endfor %}
			</div>
		</div>
