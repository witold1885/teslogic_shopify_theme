<style type="text/css">
	.back_products {
		display: flex;
		justify-content: center;
		margin-bottom: 100px;
	}
	.back_products-button {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 56px;
		padding: 3px 23px; 
		background: #3374FB;
		border: 1px solid #3374FB;
		border-radius: 100px;
		font-family: 'Gotham';
		font-style: normal;
		font-weight: 400;
		font-size: 24px;
		line-height: 32px;
		color: #FFFFFF;
		cursor: pointer;
		text-decoration: none;
	}
	@media screen and (min-width: 1000px) and (max-width: 1366px) { 
		.back_products {
			margin-bottom: calc(100 * 100vw / 1366);
		}
		.back_products-button {
			height: calc(56 * 100vw / 1366);
			padding: calc(3 * 100vw / 1366) calc(23 * 100vw / 1366); 
			border-radius: calc(100 * 100vw / 1366);
			font-size: calc(24 * 100vw / 1366);
			line-height: calc(32 * 100vw / 1366);
		}
	}
	@media screen and (max-width: 999px) {
		.back_products {
			margin-bottom: 80px;
		}
		.back_products-button {
			height: 56px;
			padding: 3px 23px; 
			border-radius: 100px;
			font-size: 24px;
			line-height: 32px;
		}
	}
</style>

<div class="back_products">
	<a href="/" class="back_products-button">Back to product page</a>				
</div>

<script type="text/javascript">
	$(document).ready(function() {
		setButtonText()
		$(window).on('resize', setButtonText)
		function setButtonText() {
			if (window.innerWidth < 1000) {
				$('.back_products-button').text('Back to product')
			}
			else {
				$('.back_products-button').text('Back to product page')
			}
		}
	})
</script>
