          <div class="pointer-legend">
            Current and maximum horsepower
          </div>
          <div class="pointer-point"><img src="{{ 'point.png' | asset_url }}"></div>
        </div>
      </div>
      <div class="pointer pointer-top pointer-right pointer-notifications-top-right" data-view="notifications-top-right">
